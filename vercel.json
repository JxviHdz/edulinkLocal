{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/router.php": {
      "runtime": "vercel-php@0.5.2"
    }
  },
  "rewrites": [
    {
      "source": "/(.*\\.php)",
      "destination": "/api/router.php?file=$1"
    },
    {
      "source": "/",
      "destination": "/api/router.php?file=index.php"
    }
  ]
} 